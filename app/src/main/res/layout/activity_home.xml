                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/roboto_light"
                            android:text="@string/five"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
